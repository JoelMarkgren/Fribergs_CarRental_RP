<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Länk till din CSS-fil här -->
    <title>Document</title>
</head>
<body>
    <header>
        <nav class="nav1">
            <div class="container">
                <div>
                    <img class="friberg-logo" src="/Images/friberg_logo.png" />
                </div>
                
                @*  Om ingen är inloggad *@
                @if (string.IsNullOrEmpty(Context.Session.GetString("CustomerLoggedIn")) && string.IsNullOrEmpty(Context.Session.GetString("AdminLoggedIn")))
                {
                    
                    <div>
                        <ul>
                            <li>
                                <a class="navbar-item" asp-page="/Register">Registrera</a>
                                <a class="navbar-item" asp-page="/Login/Index">Logga in</a>
                            </li>

                        </ul>
                    </div>
                    <div>
                        <ul>
                            <li><a class="navbar-item" asp-page="/Login/AdminLogin">Admin</a></li>
                        </ul>
                    </div>
                }

                <div>
                    <ul>
                        <li>
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("CustomerLoggedIn")))
                            {
                                <p class="session-login-text">Du är inloggad som:@Context.Session.GetString("CustomerLoggedIn")</p>
                                <a asp-area="" asp-page="/Logout">Logga ut</a>
                            }
                            
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminLoggedIn")))
                            {
                                <p class="session-login-text">Du är inloggad som:@Context.Session.GetString("AdminLoggedIn")</p>
                                <a asp-area="" asp-page="/Logout">Logga ut</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

























